.container{
  width:100%;
  height:100%;
  background:#eee;
}
.container>.nav{
   width:100%;
   height:100rpx;
   line-height: 100rpx;
  display:flex;
  justify-content:space-around;
  background:#fff;
}
.container>.wrapper{
  width:100%;
  margin-top:50rpx;
}
.container>.wrapper>.context{
  width:90%;
  margin-left:5%;
  background:#fff;
}
.container>.wrapper>.context>.title{
  width:100%;
  height:100rpx;
  line-height: 90rpx;
  display:flex;
  justify-content: space-between;
  padding:0 10rpx;
}
.container>.wrapper>.context>.content{
  width:100%;
}
.container>.wrapper>.context>.content>.wrap{
  width:90%;
  margin-left:5%;
  height:100rpx;
  line-height: 100rpx;
  background:#eee;
  border-radius: 20rpx;
  margin-top:50rpx;
}

.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.swiper-tab-item{
  width: 30%; 
  color:#434343;
}
.active{
  color:#F65959;
  border-bottom: 4rpx solid #F65959;
}
